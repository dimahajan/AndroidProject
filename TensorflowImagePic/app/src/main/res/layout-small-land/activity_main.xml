<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myActivity"
    android:background="@drawable/myapp"
    tools:context="com.example.amol.tensrflowimagepic.MainActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/takeImg" />


            <Button
                android:id="@+id/takeImg"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b1"
                android:textColor="#ffffff"
                android:textSize="6sp"
                android:layout_above="@+id/dispInfo"
                android:layout_alignStart="@+id/dispInfo"
                android:layout_marginBottom="14dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/dispInfo"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b2"
                android:textColor="#ffffff"
                android:textSize="6sp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imgView"
                android:textAllCaps="false"/>



        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:textColor="#0CD21B"
            android:textSize="18sp"
            android:layout_alignTop="@+id/takeImg"
            android:layout_alignEnd="@+id/imgView" />

</RelativeLayout>
