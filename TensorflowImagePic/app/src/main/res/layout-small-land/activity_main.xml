<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myActivity"
    android:background="@drawable/myapp"
    tools:context="com.example.amol.tensrflowimagepic.MainActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_weight="0.79"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


            <Button
                android:id="@+id/takeImg"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_weight="0.75"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b1"
                android:textColor="#ffffff"
                android:textSize="5sp"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/tv" />

            <Button
                android:id="@+id/dispInfo"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b2"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="5sp"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/tv2" />



        <TextView
            android:id="@+id/tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:textSize="5sp"
            android:layout_below="@+id/imgView"
            android:layout_toEndOf="@+id/imgView" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:textSize="5sp"
        android:layout_marginStart="19dp"
        android:layout_below="@+id/imgView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
