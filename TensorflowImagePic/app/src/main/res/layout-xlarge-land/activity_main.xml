<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myActivity"
    android:background="@drawable/myapp"
    tools:context="com.example.amol.tensrflowimagepic.MainActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="550dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_weight="0.79"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


            <Button
                android:id="@+id/takeImg"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_weight="0.75"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b1"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_marginStart="203dp"
                android:layout_alignTop="@+id/textView"
                android:layout_alignParentStart="true"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/dispInfo"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b2"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_below="@+id/takeImg"
                android:layout_alignStart="@+id/takeImg"
                android:layout_marginTop="57dp"
                android:textAllCaps="false"/>



        <TextView
            android:id="@+id/textView"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:background="@color/colorAccent"
            android:textColor="#0CD21B"
            android:textSize="18sp"
            android:layout_marginEnd="164dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="46dp" />

</RelativeLayout>
