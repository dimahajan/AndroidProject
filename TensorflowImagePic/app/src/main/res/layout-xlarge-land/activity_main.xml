<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myActivity"
    android:background="@drawable/myapp"
    tools:context="com.example.amol.tensrflowimagepic.MainActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="450dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_weight="0.79"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />


            <Button
                android:id="@+id/takeImg"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_weight="0.75"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:layout_alignBottom="@+id/imgView"
                android:layout_alignStart="@+id/tv2"
                android:layout_marginStart="41dp" />

            <Button
                android:id="@+id/dispInfo"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:background="@drawable/button_states"
                android:onClick="takePhoto"
                android:text="@string/b2"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_marginStart="80dp"
                android:layout_alignBottom="@+id/imgView"
                android:layout_alignStart="@+id/tv" />



        <TextView
            android:id="@+id/tv"
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:background="#ffffff"
            android:textSize="13dp"
            android:layout_marginEnd="21dp"
            android:layout_alignBaseline="@+id/tv2"
            android:layout_alignBottom="@+id/tv2"
            android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:background="#ffffff"
        android:textSize="13dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="115dp"
        android:layout_alignTop="@+id/imgView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
